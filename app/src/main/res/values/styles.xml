<resources>
    <style name="RegularText">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="ThinText">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/lato_thin</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="BoldText">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="S28.BoldText" parent="BoldText">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="RegularText.Reversed" parent="RegularText">
        <item name="android:textColor">@color/textReversed</item>
    </style>

    <style name="ThinText.Reversed" parent="ThinText">
        <item name="android:textColor">@color/textReversed</item>
    </style>

    <style name="BoldText.Reversed" parent="BoldText">
        <item name="android:textColor">@color/textReversed</item>
    </style>

    <style name="ButtonText" parent="Widget.AppCompat.Button.Colored">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:textColor">@color/selector_text_button</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
